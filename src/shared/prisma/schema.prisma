generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  score       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ingredients RecipeIgnredient[]
  steps       Step[]
}

model RecipeIgnredient {
  idRecipe     Int
  idIngredient Int
  quantity     Float

  Recipe     Recipe     @relation(fields: [idRecipe], references: [id])
  Ingredient Ingredient @relation(fields: [idIngredient], references: [id])

  @@id([idIngredient, idRecipe])
}

model Ingredient {
  id   Int    @id @default(autoincrement())
  name String
  unit String

  recipes RecipeIgnredient[]
}

model Step {
  id          Int    @id @default(autoincrement())
  idRecipe    Int
  number      Int
  instruction String

  Recipe Recipe @relation(fields: [idRecipe], references: [id])
}
