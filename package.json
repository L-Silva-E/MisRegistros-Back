{
  "name": "misregistros-back",
  "version": "1.5.0",
  "description": "App to register all personal data",
  "main": "server.js",
  "scripts": {
    "dev": "ts-node-dev src/server.ts",
    "dev:container": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll src/server.ts",
    "start": "node build/server.js",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml stop",
    "docker:prod": "docker-compose --profile production up --build",
    "docker:prod:down": "docker-compose --profile production down",
    "docker:prod:stop": "docker-compose --profile production stop"
  },
  "author": "Lucas Silva",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prisma": "5.7.0",
    "ts-jest": "^29.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@prisma/client": "5.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "4.19.2",
    "moment": "^2.30.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "prisma": {
    "schema": "src/shared/prisma/schema.prisma",
    "seed": "ts-node src/shared/prisma/seeds/seed.ts"
  }
}
